package Coding;

public class RotateArray {
	 public void rotate(int[] nums, int k) {
		 int n=nums.length;
		  k=k%n;
		  int [] temp=new int[n];
		  for(int i=0;i<temp.length;i++) {
			  temp[(i+k)%n]=nums[i];
		  }
		  for(int i=0;i<nums.length;i++) {
			  nums[i]=temp[i];
		  }
		  for(int i:nums) {
			  System.out.print(i);
		  }
	  }

	public static void main(String[] args) {
		RotateArray r=new RotateArray();
		int[] nums= {1,2,3,4,5,6,7};
		int k=3;
		r.rotate(nums,k);

	}
}

